<%- include("../partials/header"); %>
<div class="row">
  <% if(!noticia._id){%>
  <p class="text-center text-uppercase mx-auto my-5 bg-primary p-2 text-white">
    Esta noticia no existe
  </p>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <a href="/" class="btn btn-info btn-block"> Volver</a>
      </div>
    </div>
  </div>
  <% } %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 my-5">
        <div class="card mb-3">
          <img
            class="card-img-top img-fluid"
            src="/imagenes/<%= noticia.imagen %>"
            alt="Card image cap"
          />
